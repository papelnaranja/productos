<p id="notice"><%= notice %></p>

<h3><%= @category.name %></h3>

<div class="row">

<div class="col-md-4">

<div class="section-form">

<h5>AÃ±adir nuevo producto</h5>
<%= form_with(model: [ @category, @product ]) do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Nombre' %>
    <%= form.text_field :name , class:'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :price, 'precio  ' %>
    <div class="col-md-6">
      <%= form.number_field :price , class:'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit  'Crear producto' , class:'btn btn-primary' %>
  </div>
<% end %>
</div>
</div>
<div class="col-md-8">

<div class="table-section">
<h4>Productos existentes</h4>
  <table class="table">
  <thead>
    <th>Nombre</th>
    <th>Precio</th>
    <th>Eliminar</th>
  </thead>
  <tbody>
    <% @category.product.each do |product| %>
    <tr>
      <td> <%= product.name %></td>
      <td> <%= product.price  %></td>
      <td><%= link_to 'Eliminar', category_product_path(@category , product),  method: :delete, class:'link link-danger'  %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>
</div>
</div>

<%= link_to 'Edit', edit_category_path(@category) %> |
